@model TrashCollector.Models.PickUp

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>PickUp</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="GetCustomersId" class="control-label"></label>
                <input asp-for="GetCustomersId" class="form-control" />
                <span asp-validation-for="GetCustomersId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DayOfWeek" class="control-label"></label>
                <input asp-for="DayOfWeek" class="form-control" />
                <span asp-validation-for="DayOfWeek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PickUpDay" class="control-label"></label>
                <input asp-for="PickUpDay" class="form-control" />
                <span asp-validation-for="PickUpDay" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CustomerTrashWasNotCollected" /> @Html.DisplayNameFor(model => model.CustomerTrashWasNotCollected)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CustomerRecyclingWasNotCollected" /> @Html.DisplayNameFor(model => model.CustomerRecyclingWasNotCollected)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="DiscontinuePickUp" class="control-label"></label>
                <input asp-for="DiscontinuePickUp" class="form-control" />
                <span asp-validation-for="DiscontinuePickUp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PausePickUp" class="control-label"></label>
                <input asp-for="PausePickUp" class="form-control" />
                <span asp-validation-for="PausePickUp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bill" class="control-label"></label>
                <input asp-for="Bill" class="form-control" />
                <span asp-validation-for="Bill" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
