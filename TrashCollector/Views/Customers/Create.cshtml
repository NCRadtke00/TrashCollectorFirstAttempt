@model TrashCollector.Models.Customer

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="firstName" class="control-label"></label>
                <input asp-for="firstName" class="form-control" />
                <span asp-validation-for="firstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lastName" class="control-label"></label>
                <input asp-for="lastName" class="form-control" />
                <span asp-validation-for="lastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="street" class="control-label"></label>
                <input asp-for="street" class="form-control" />
                <span asp-validation-for="street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="city" class="control-label"></label>
                <input asp-for="city" class="form-control" />
                <span asp-validation-for="city" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="state" class="control-label"></label>
                <input asp-for="state" class="form-control" />
                <span asp-validation-for="state" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="zipCode" class="control-label"></label>
                <input asp-for="zipCode" class="form-control" />
                <span asp-validation-for="zipCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cordinates" class="control-label"></label>
                <input asp-for="cordinates" class="form-control" />
                <span asp-validation-for="cordinates" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="initialPickUp" class="control-label"></label>
                <input asp-for="initialPickUp" class="form-control" />
                <span asp-validation-for="initialPickUp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="additionPickup" class="control-label"></label>
                <input asp-for="additionPickup" class="form-control" />
                <span asp-validation-for="additionPickup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="discontinuePickUps" class="control-label"></label>
                <input asp-for="discontinuePickUps" class="form-control" />
                <span asp-validation-for="discontinuePickUps" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pausePickUps" class="control-label"></label>
                <input asp-for="pausePickUps" class="form-control" />
                <span asp-validation-for="pausePickUps" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="bill" class="control-label"></label>
                <input asp-for="bill" class="form-control" />
                <span asp-validation-for="bill" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="hasTrashBeenCollected" /> @Html.DisplayNameFor(model => model.hasTrashBeenCollected)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="wasRecyclingPickedUp" /> @Html.DisplayNameFor(model => model.wasRecyclingPickedUp)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="IdentityUserId" class="control-label"></label>
                <select asp-for="IdentityUserId" class ="form-control" asp-items="ViewBag.IdentityUserId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
